{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "moduleResolution": "node",

    "noEmitOnError": false,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ]
}
